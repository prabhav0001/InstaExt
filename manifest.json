{
  "manifest_version": 3,
  "name": "Instagram Views Booster",
  "version": "1.0",
  "description": "Automate Instagram views using Zefame",
  "permissions": [
    "tabs",
    "scripting",
    "alarms",
    "storage"
  ],
  "host_permissions": [
    "https://zefame.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://zefame.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
